---
import { Picture } from "astro:assets"

interface Props {
  src: string
  alt: string
  className?: string
  noBorder?: boolean
  outline?: boolean
}

const { src, alt, className, noBorder, outline } = Astro.props

const borderStyle = !noBorder
  ? "lg:ring-2 ring-slate-100 lg:p-3 dark:ring-slate-700"
  : ""

const outlineStyle = outline
  ? "ring-2 ring-slate-100 !p-0 dark:ring-slate-700"
  : ""
---

<figure class="text-center text-xs lg:-mx-32">
  <Picture
    src={src}
    formats={["avif", "webp", "jpg"]}
    alt={alt}
    width="1920"
    height="1080"
    class="rounded-lg md:rounded-2xl lg:rounded-3xl"
    class:list={[borderStyle, outlineStyle, className]}
  />
  <figcaption>
    <slot />
  </figcaption>
</figure>
