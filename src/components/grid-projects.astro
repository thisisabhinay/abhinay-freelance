---
import { latestProjects } from "../utils/projects"
import Project from "../components/project.astro"

const { count, className = "" } = Astro.props

const projectsList = count ? latestProjects.slice(0, count) : latestProjects
---

<div
  class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 gap-7 md:grid-cols-3"
  class:list={[className]}
>
  {
    projectsList.map((project) => {
      return (
        <Project
          name={project.data.title}
          description={project.data.description}
          image={project.data.image}
          company={project.data.company}
          slug={project.slug}
          layout="card"
        />
      )
    })
  }
</div>
